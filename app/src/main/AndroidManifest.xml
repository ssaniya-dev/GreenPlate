<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipeApp"
        tools:targetApi="31">
        <activity
            android:name=".RecipeInput"
            android:exported="false" />
        <!-- SplashActivity as the default activity -->
        <activity
            android:name=".views.SplashActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other activities -->
        <activity
            android:name=".views.WelcomeActivity"
            android:exported="true" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".views.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".views.ShoppingListActivity"
            android:exported="false" />
        <activity
            android:name=".Chart1Activity"
            android:exported="true" />
        <activity
            android:name=".Chart2Activity"
            android:exported="true" />
        <activity
            android:name=".views.PersonalInformationActivity"
            android:exported="true" />
        <activity
            android:name=".views.MissingIngredientActivity"
            android:exported="true" />
        <activity
            android:name=".RecipeDetailsActivity"
            android:exported="true" />

        <activity
            android:name=".views.IngredientInput"
            android:exported="true"/>
        <activity
            android:name=".views.ShoppingInputActivity"
            android:exported="true"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>